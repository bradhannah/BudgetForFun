# Test app to verify sidecar bundling
{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "budgetforfun-test",
  "version": "0.1.0",
  "identifier": "com.bradhannah.budgetforfun.test",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "beforeBundleCommand": "",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Test App",
        "width": 800,
        "height": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/bun-sidecar-aarch64-apple-darwin"
    ],
    "icon": [
      "icons/32x32.png"
    ]
  }
}
